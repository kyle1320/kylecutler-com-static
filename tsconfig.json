{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "makeElement",
    "lib": [ "dom", "esnext" ]
  },
  "include": [
    "src/**/*.ts", "src/**/*.js, src/**/*.tsx", "src/**/*.jsx"
  ]
}