{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "none"
            }
        ],
        "max-len": [
            "error",
            {
                "code": 80,
                "ignoreComments": true
            }
        ],
        "no-debugger": "error",
        "no-implied-eval": "error",
        "no-with": "error",
        "wrap-iife": "error",
        "comma-spacing": "error",
        "new-parens": "error",
        "new-cap": [
            "error",
            {
                "newIsCap": true,
                "capIsNew": false
            }
        ],
        "no-lonely-if": "error",
        "no-multiple-empty-lines": "error",
        "no-tabs": "error",
        "nonblock-statement-body-position": "error",
        "spaced-comment": [
            "error",
            "always",
            {
                "block": {
                    "exceptions": ["*"],
                    "balanced": true
                }
            }
        ],
        "keyword-spacing": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "ignore",
                "asyncArrow": "always"
            }
        ],
        "space-before-blocks": "error",
        "block-spacing": "error"
    },
    "overrides": [
        {
            "files": ["**/*.ts", "**/*.tsx"],
            "parser": "typescript-eslint-parser",
            "plugins": ["typescript"],
            "rules": {
                "no-dupe-class-members": "off",
                "no-undef": "off",
                "typescript/class-name-casing": "error",
                "typescript/no-unused-vars": "error",
                "typescript/explicit-member-accessibility": "error",
                "typescript/no-inferrable-types": [
                    "error",
                    {
                        "ignoreParameters": true
                    }
                ],
                "typescript/type-annotation-spacing": "error"
            }
        },
        {
            "files": ["**/*.jsx", "**/*.tsx"],
            "parserOptions": {
                "ecmaFeatures": {
                    "jsx": true
                }
            },
            "rules": {
                "no-unused-vars": [
                    "error",
                    {
                        "vars": "local",
                        "args": "none",
                        "varsIgnorePattern": "^makeElement$"
                    }
                ]
            }
        }
    ]
}