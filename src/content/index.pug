extends /common/templates/shared/main.pug

include /common/templates/components/images.pug

mixin tile(title, href, img, desc)
  a.tile(href=href)&attributes(attributes)
    .tile__image
      +img-hi-res(img)(alt=title)
    .info
      .info__title= title
      if desc
        .info__desc= desc

block vars
  - title = "Home"

block content
